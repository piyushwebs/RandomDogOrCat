<%- layout("/layouts/boilerplate.ejs") %>
<div class="mainCont">
  <div class="cardCont">
    <div class="card">
      <h5 class="card-title mb-3"><%= source.name %></h5>
      <img src="<%= source.image.src %>" alt="catImg" class="card-img-top" />
      <div class="card-body ">
        <hr>
        
        <p class="card-text mt-3"><span>Description</span> :- <%=source.fact%></p>
        <p class="card-text"><span>Found In</span> :- <%=source.country%> </p>
        <hr>
      </div>
     
    </div>
    <div class="groupButtons">
      <div class="nextBtn">
        <form method="post" action="/CatImg?_method=PATCH">
          <button class="btn btn-outline-primary mt-3">Next One</button>
        </form>
      </div>
     <div>
      <form method="get" action="/DogAndCatImg">
        <button class="btn btn-outline-info mt-3">Home</button>
      </form>
     </div> 
    </div>
    
  </div>
</div>
